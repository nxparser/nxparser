<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.semanticweb.yars</groupId>
	<artifactId>nxparser</artifactId>
	<version>2.2-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>NxParser</name>
	<url>https://code.google.com/p/nxparser/</url>

	<issueManagement>
		<system>Google Code</system>
		<url>https://code.google.com/p/nxparser/issues/list</url>
	</issueManagement>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.target>1.6</maven.compiler.target>
		<maven.compiler.source>1.6</maven.compiler.source>
	</properties>

	<modules>
		<module>nxparser-api</module>
		<module>nxparser-cli</module>
		<module>nxparser-commons</module>
		<module>nxparser-model</module>
		<module>nxparser-model-datatypes</module>
		<module>nxparser-parsers</module>
		<module>nxparser-parsers-external</module>
		<module>nxparser-serialisers</module>
		<module>nxparser-utilities</module>
		<module>nxparser-utilities-nx</module>
		<module>nxparser-utilities-uri</module>
	</modules>

	<repositories>
		<repository>
			<id>nxparser-repo</id>
			<url>
				https://nxparser.googlecode.com/svn/repository
			</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>fail</checksumPolicy>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>nxparser-snapshots</id>
			<url>
				https://nxparser.googlecode.com/svn/snapshots
			</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<dependencies>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<distributionManagement>
		<repository>
			<id>nxparser-repo</id>
			<url>svn:https://nxparser.googlecode.com/svn/repository</url>
		</repository>
		<snapshotRepository>
			<id>nxparser-snapshots</id>
			<url>svn:https://nxparser.googlecode.com/svn/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<scm>
		<connection>svn:http://nxparser.googlecode.com/svn/trunk</connection>
		<developerConnection>svn:https://nxparser.googlecode.com/svn/trunk</developerConnection>
		<url>https://code.google.com/p/nxparser/source/browse/</url>
	</scm>

	<build>
		<!-- Support for deploying sites to scp://-Urls -->
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh</artifactId>
				<version>1.0-beta-6</version>
			</extension>
			<extension>
				<groupId>org.jvnet.wagon-svn</groupId>
				<artifactId>wagon-svn</artifactId>
				<version>1.9</version>
			</extension>
		</extensions>

	</build>

</project>
